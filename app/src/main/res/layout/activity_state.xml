<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".StateActivity">

    <TextView
        android:id="@+id/stateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="감지 요소 현재 상태"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/stateFireLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/fire_gradient"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fireTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="화재 경보기"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/temperIdText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="온도"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/temperTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data2"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fireIdText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="불꽃감지"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/fireTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data1"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sensorTimeId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="센서 시간"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/fireTimeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data3"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stateGasLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/gas_gradient"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gasTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="가스누출 경보기"
                    android:textAlignment="center"
                    android:textColor="#B6B4B4"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/coIdText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="일산화탄소"
                        android:textAlignment="center"
                        android:textColor="#B6B4B4"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/coTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data1"
                        android:textAlignment="center"
                        android:textColor="#B6B4B4"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="가연성"
                            android:textAlignment="center"
                            android:textColor="#B6B4B4"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/flamTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data2"
                            android:textAlignment="center"
                            android:textColor="#B6B4B4"
                            android:textSize="30sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="센서 시간"
                            android:textAlignment="center"
                            android:textColor="#B6B4B4"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/gasTimeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data3"
                            android:textAlignment="center"
                            android:textColor="#B6B4B4"
                            android:textSize="30sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stateQuakeLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/earthquake_gradient"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/quakeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="지진 감지기"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="지진 탐지"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/vibrationTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data1"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="40sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="센서 시간"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/quakeTimeTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data2"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>